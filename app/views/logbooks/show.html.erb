<h1><%= @Logbook.departurePlace %> - <%= @Logbook.arrivalPlace %></h1>

<h5> Coordinates EGKK: </h5>
<p> (<%= @lat_dep %>, <%= @long_dep %>) </p>

<h4><%= @Logbook.date.try(:strftime, '%d/%m/%Y') %></h4>

<br>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){


  markers = handler.addMarkers([
    { "lat": <%= @lat_dep %>, "lng": <%= @long_dep %>},
    { "lat": '39.5517006', "lng": '2.73881006'}
    ]);

  polyline = handler.addPolyline([
    { "lat": <%= @lat_dep %>, "lng": <%= @long_dep %>},
    { "lat": '39.5517006', "lng": '2.73881006'}]);


  handler.bounds.extendWith(markers);
  handler.bounds.extendWith(polyline);
  handler.fitMapToBounds();
});
</script>

